= form_for @bid, class: "form-group" do |f|
  - if @bid.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bid.errors.count, "error")} prohibited this bid from being saved:"
      %ul
        - @bid.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :value
    = f.number_field :value, class: "form-control"
  .field
    = f.hidden_field :post_id, value: @post.id
    = f.hidden_field :user_id, value: current_user.id
  .field
    = f.label :info
    = f.text_area :info, class: "form-control"
  .actions
    = f.submit 'Bid'
