= form_for @gallery do |f|
  - if @gallery.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gallery.errors.count, "error")} prohibited this gallery from being saved:"
      %ul
        - @gallery.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :owner_id
    = f.number_field :owner_id
  .field
    = f.label :owner_type
    = f.text_field :owner_type
  .actions
    = f.submit 'Save'
