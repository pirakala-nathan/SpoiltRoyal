= form_for @personal_info do |f|
  - if @personal_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@personal_info.errors.count, "error")} prohibited this personal_info from being saved:"
      %ul
        - @personal_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :legal_first_name
    = f.text_field :legal_first_name
  .field
    = f.label :legal_last_name
    = f.text_field :legal_last_name
  .field
    = f.label :preferred_name
    = f.text_field :preferred_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :primary_phone
    = f.number_field :primary_phone
  .field
    = f.label :secondary_phone
    = f.number_field :secondary_phone
  .field
    = f.label :vendor_id
    = f.number_field :vendor_id
  .actions
    = f.submit 'Save'
