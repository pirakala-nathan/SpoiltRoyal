- @page = request.path.split("/").last
%nav#dash-nav.navbar.navbar-default.navbar-static-top.hidden-xs
	.container
		.col-xs-10.col-xs-offset-1.nav-links
			%ul.nav.navbar-nav.col-xs-12.no-h-padding
				%li{class: ("active" if @page == "overview")}
					= link_to "Overview", overview_user_path(current_user)
				%li{class: ("active" if @page == "inbox")}	
					= link_to "Inbox", inbox_user_path(current_user)
				%li{class: ("active" if @page == "bids")}	
					= link_to "Bids", bids_user_path(current_user)
				%li{class: ("active" if @page == "watched_posts")}
					= link_to "Watched Posts", watched_posts_user_path(current_user)
				%li{class: ("active" if @page == "statistics")}	
					= link_to "Statistics", statistics_user_path(current_user)
				%li{class: ("active"  if request.path == vendor_path(current_user.account))}
					- if @current_user.account_type == "Vendor"	
						= link_to "Profile", vendor_path(current_user.account)
					- else
						= link_to "Profile", consumer_path(current_user.account)
				%li{class: ("active" if @page == "account")}
					= link_to "Settings", account_user_path(current_user)


