<%= form_for(@asset, html: { multipart: true }) do |f| %>
  <% if @asset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@asset.errors.count, "error") %> prohibited this upload from being saved:</h2>

      <ul>
        <% @asset.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.label :image, t('.upload_new_file') %>
    <%= f.file_field :image, multiple: true, name: 'asset[image]' %>
    <button class ="done-btn">Upload</button>
  </div>
<% end %>

