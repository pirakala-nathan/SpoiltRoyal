= form_for @watched_post do |f|
  - if @watched_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@watched_post.errors.count, "error")} prohibited this watched_post from being saved:"
      %ul
        - @watched_post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :post_id
    = f.number_field :post_id
  .actions
    = f.submit 'Save'
